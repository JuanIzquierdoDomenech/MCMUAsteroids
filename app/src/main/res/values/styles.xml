<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    </style>

    <style name="Asteroids.Dialog" parent="Theme.AppCompat.Dialog">
    </style>

    <style name="Asteroids.FullScreen" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- ASTEROIDS ACTIVITY -->
    <style name="Asteroids.TextView" parent="AppTheme">
        <item name="android:textSize">26sp</item>
        <item name="android:padding">20dp</item>
    </style>

    <style name="Asteroids.Tablet.TextView" parent="AppTheme">
        <item name="android:textSize">50sp</item>
        <item name="android:padding">20dp</item>
    </style>

    <style name="Asteroids.Button" parent="AppTheme">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Asteroids.Tablet.Button" parent="AppTheme">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">30dp</item>
    </style>

</resources>
